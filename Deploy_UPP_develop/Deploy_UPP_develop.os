	Логирование.ЗаписатьСтрокуЛога("Контекст конфигуратора установлен");
	
	КонфигураторДеплой = Новый УправлениеКонфигуратором();
	Конфигуратор.УстановитьКонтекст("/S" + Параметры["ИмяСервера"] + "\" + Параметры["ИмяБазыДеплой"],
